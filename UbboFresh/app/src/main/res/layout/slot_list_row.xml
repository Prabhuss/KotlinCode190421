<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/slot_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@color/quantum_grey500"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn"
                android:src="@drawable/radio_unchecked"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/slot"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back_btn"
                android:layout_centerVertical="true"
                android:fontFamily="@font/asar"
                android:text="slot"
                android:textColor="@color/quantum_grey800"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:id="@+id/slot_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/date"
                android:text="today"
                android:textColor="@color/family_red"
                android:textSize="@dimen/_8sdp" />
        </RelativeLayout>
    </LinearLayout>
</layout>