<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:contentPadding="@dimen/_7sdp"
        android:orientation="vertical"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_210sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text1"
                        android:layout_below="@id/image"
                        android:maxLines="4"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Aarati Premium rice-5kg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text2"
                        android:layout_above="@+id/but_layout"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="Nrs 50(45 nrs)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/but_layout"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:id="@+id/minus_layout"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_alignParentLeft="true"
                                android:background="@drawable/rectangle_corner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/remove"
                                    android:background="@drawable/ic_remove"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/minus_layout"
                                android:layout_toLeftOf="@+id/plus_layout"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/rectangle_corner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/add"
                                    android:text="add"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:id="@+id/plus_layout"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:background="@drawable/rectangle_corner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/plus"
                                    android:background="@drawable/ic_add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:background="@drawable/red_rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/offer_text"
                    android:text="Offer 10%"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_7sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
