<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        android:orientation="vertical"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_210sdp">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/image_layout"
                    android:layout_above="@+id/strike_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_no_image_found"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"/>
                    <TextView
                        android:id="@+id/text1"
                        android:layout_below="@id/image"
                        android:maxLines="4"
                        android:text="product name is long in this case"
                        android:layout_centerHorizontal="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/strike_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/but_layout"
                    android:layout_centerHorizontal="false">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="Nrs 50" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/text2"
                        android:text="Nrs 50" />

                    <TextView
                        android:id="@+id/strike"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/text2"
                        android:background="@android:color/holo_red_dark"
                        android:text="texxt2" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/but_layout"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rectangle_corner_selected"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_28sdp">
                    <ImageView
                        android:id="@+id/remove"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_remove_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/count_txt"
                        android:layout_toRightOf="@id/remove"
                        android:layout_toLeftOf="@+id/add"
                        android:gravity="center"
                        android:text="Add"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/add"
                        android:visibility="gone"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_add_white"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>


            <ImageView
                android:id="@+id/product_type_color"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="@dimen/_5sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/offer_text"
                    android:text="0.001% OFF"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_new_project"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/view_all_text"
            android:visibility="gone"
            android:text="View All"
            android:textColor="@color/family_red"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
</layout>
