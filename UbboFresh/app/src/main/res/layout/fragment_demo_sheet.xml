<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_peekHeight="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.denzcoskun.imageslider.ImageSlider
                            android:padding="@dimen/_8sdp"
                            android:id="@+id/image_slider"
                            app:iss_title_background="@drawable/slidingbg"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_236sdp"/>
                            <!--app:iss_auto_cycle="true"
                            app:iss_delay="0"
                            app:iss_period="1000" -->

                        <!--<androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewItemImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_250sdp"/> -->
                        <LinearLayout
                            android:id="@+id/SliderDots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/viewPager"
                            android:gravity="start"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_8sdp"
                                android:text="Marico Veggie Clean Pouch 200ML"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14sdp" /><LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/yousave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#EE6A2E"
                                android:padding="@dimen/_1sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:text="you save"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:id="@+id/discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:text="9:00" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/productdetail_type_color"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_27sdp" />

                                    <TextView
                                        android:id="@+id/productdetail_type_label"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentBottom="true"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/_6sdp" />

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        </LinearLayout>

                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/nestedScrollView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_7sdp"
                                    android:orientation="vertical">


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:id="@+id/layout11"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <LinearLayout
                                                    android:id="@+id/playout"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_toLeftOf="@+id/add_but"
                                                    android:orientation="vertical">




                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="horizontal"
                                                        android:padding="@dimen/_5sdp">

                                                        <TextView
                                                            android:id="@+id/price"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="39:00" />

                                                        <RelativeLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="@dimen/_5sdp">

                                                            <TextView
                                                                android:id="@+id/mrp"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:text="9:00" />

                                                            <TextView
                                                                android:id="@+id/strike_line"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="1dp"
                                                                android:layout_centerVertical="true"
                                                                android:background="@color/family_red"
                                                                android:text="9:00" />
                                                        </RelativeLayout>
                                                    </LinearLayout>
                                                </LinearLayout>

                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/add_but"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_30sdp"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="@dimen/_5sdp"
                                                    android:background="@drawable/rounded_corner_blue"
                                                    android:text="add"
                                                    android:textColor="@android:color/white"
                                                    android:visibility="gone" />
                                            </RelativeLayout>

                                            <TextView
                                                android:id="@+id/prod_desc"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_7sdp"
                                                android:text="@string/product_desc"
                                                android:textColor="@android:color/black"
                                                android:textSize="@dimen/_15sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/desc"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:padding="@dimen/_5sdp"
                                                android:text="desc" />

                                            <TextView
                                                android:id="@+id/additional_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_7sdp"
                                                android:padding="@dimen/_5sdp"
                                                android:text="Additional Information"
                                                android:textColor="@android:color/black"
                                                android:textSize="@dimen/_13sdp"
                                                android:textStyle="bold"
                                                android:visibility="gone" />


                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/cell_shape"
                                                android:orientation="vertical"
                                                android:visibility="gone">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/bottom_line">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="2"
                                                        android:background="@color/family_grey"
                                                        android:gravity="center_vertical"
                                                        android:text="Packae Dimensions"
                                                        android:textColor="@color/white" />

                                                    <TextView
                                                        android:id="@+id/pack_dem"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="@dimen/_5sdp"
                                                        android:layout_weight="1"
                                                        android:padding="@dimen/_5sdp"
                                                        android:text="7.7*4.1*18.5cm" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/bottom_line">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="2"
                                                        android:background="@color/family_grey"
                                                        android:gravity="center_vertical"
                                                        android:text="Brand"
                                                        android:textColor="@color/white" />

                                                    <TextView
                                                        android:id="@+id/brand"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="@dimen/_5sdp"
                                                        android:layout_weight="1"
                                                        android:padding="@dimen/_5sdp"
                                                        android:text="Veggie" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/bottom_line">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="2"
                                                        android:background="@color/family_grey"
                                                        android:gravity="center_vertical"
                                                        android:text="Manufacture"
                                                        android:textColor="@color/white" />

                                                    <TextView
                                                        android:id="@+id/manfac"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="@dimen/_5sdp"
                                                        android:layout_weight="1"
                                                        android:padding="@dimen/_5sdp"
                                                        android:text="Marico,Ganesh Personal Care Products Pvt Ltd" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="2"
                                                        android:background="@color/family_grey"
                                                        android:gravity="center_vertical"
                                                        android:text="Counry of Origin"
                                                        android:textColor="@color/white" />

                                                    <TextView
                                                        android:id="@+id/cntyor"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="@dimen/_5sdp"
                                                        android:layout_weight="1"
                                                        android:padding="@dimen/_5sdp"
                                                        android:text="India" />
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_170sdp"
                                            android:layout_below="@+id/layout11" />
                                    </RelativeLayout>


                                </LinearLayout>

                            </LinearLayout>


                        </androidx.core.widget.NestedScrollView>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </ScrollView>

        <include
            android:id="@+id/inclueLayout"
            layout="@layout/layout_persistent_bottom_sheet" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
