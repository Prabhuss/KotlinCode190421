<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight=".35">
        <RelativeLayout
            android:id="@+id/header"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ref_page_title"
                android:layout_centerHorizontal="true"
                android:text="Refer and Earn"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/back_btn"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ref_cover_image" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".70"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="0sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progBar"
                    style="?android:attr/progressBarStyle"
                    android:indeterminateTint="@color/family_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/display_msg"
                    android:layout_margin="@dimen/_6sdp"
                    android:text="@string/ref_msg"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
            <LinearLayout
                android:id="@+id/ref_process_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:elevation="@dimen/_12sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        app:cardCornerRadius="@dimen/_50sdp">
                        <ImageView
                            android:padding="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_ref_img1"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_3sdp"
                        android:elevation="@dimen/_12sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        app:cardCornerRadius="@dimen/_50sdp">
                        <ImageView
                            android:padding="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ref_img2"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_3sdp"
                        android:elevation="@dimen/_12sdp"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        app:cardCornerRadius="@dimen/_50sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ref_img3" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@color/family_red"
                        android:layout_height="2sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentStart="true"
                        android:textAlignment="center"
                        android:text="Share the referral code with your friends"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:text="Remind them to use your referral code on their first purchase"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:textAlignment="center"
                        android:text="You can avail benefits once their order is processed"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Invite Now"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/_80sdp"
            android:layout_marginRight="@dimen/_80sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/ic_whatsapp_btn"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_whatsapp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/ic_whatsapp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_8sdp"
                    android:text="WhatsApp"
                    android:layout_below="@id/ic_whatsapp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ic_copy_btn"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_copy"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/ic_copy"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_8sdp"
                    android:text="Copy Link"
                    android:layout_below="@id/ic_copy"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ic_msg_share_btn"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_msg_share"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/ic_share"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="More"
                    android:layout_below="@id/ic_msg_share"/>
            </RelativeLayout>
        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>